<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/labelPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/send_sms_to"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPhoneNum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPhoneNum" />

    <Button
        android:id="@+id/btnPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:minHeight="20dp"
        android:minWidth="100dp"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@+id/labelPhoneNum"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Click to input phone." />

    <TextView
        android:id="@+id/tvLastSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="show last sent sms message here."
        app:layout_constraintTop_toBottomOf="@+id/btnPhoneNum" />

</android.support.constraint.ConstraintLayout>